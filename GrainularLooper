# Welcome to Sonic Pi v2.5
use_random_seed 50
juicy = "Users/markwiem/Documents/CODE/Sonic Pi/Samples/TestSamples/BeNice.wav"
length = 0.7 #desired length of sample play in seconds

total_sample_length = sample_duration(juicy) #return sample duration in seconds
print "total_sample_length: %d" % total_sample_length

scaled_sample_length = linear_scale(length, 0, total_sample_length, 0, 1) # return scaled sample length between 0-1
print "scaled sample_duration: %d" % scaled_sample_length

value = [0.5, 0.55, 0.5, 0.5, 0.45, 0.5, 0.55, 0.5, 0.5, 0.45, 0.8]#[0.5, 0.55, 0.5, 0.5, 0.45, 0.5, 0.5] 
#print value.length
count = 0
loop do
  intro = value[count]-scaled_sample_length
  outro = intro + scaled_sample_length
  sample juicy, start: intro, finish: outro
  sleep length # sleep in seconds
  if count == (value.length)-1
    count = 0
  else
    count += 1
  end
end